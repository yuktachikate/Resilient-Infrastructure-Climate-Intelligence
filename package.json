{
  "name": "rici-project",
  "version": "1.0.0",
  "description": "Resilient Infrastructure & Climate Intelligence Dashboard Suite",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd backend && npm run dev",
    "frontend:dev": "cd frontend && npm start",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "db:setup": "cd database && npm run setup",
    "db:migrate": "cd database && npm run migrate",
    "db:seed": "cd database && npm run seed",
    "build": "cd frontend && npm run build && cd ../backend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "start": "cd backend && npm start",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "climate-intelligence",
    "infrastructure",
    "dashboard",
    "gis",
    "powerbi",
    "arcgis",
    "resilience",
    "analytics"
  ],
  "author": "RICI Development Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/rici-project.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/rici-project/issues"
  },
  "homepage": "https://github.com/your-org/rici-project#readme"
}
